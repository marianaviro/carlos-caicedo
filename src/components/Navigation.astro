---
const { isIndex } = Astro.props;
const bgcolor = isIndex ? " bg-orange/85" : " bg-white";
const textcolor = isIndex ? " text-white" : " text-black";
const shadow = isIndex ? " drop-shadow-pink" : "";
---

<div
  class={"p-2 nav-links uppercase italic tracking-widest text-xs" +
    bgcolor +
    textcolor +
    shadow}
>
