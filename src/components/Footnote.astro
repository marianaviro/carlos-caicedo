---
const props = Astro.props;
---

<button
  {...props}
  id={props.numero}
  class="font-bold text-orange hover:text-black"
  data-tippy-content={props.contenido}><sup>{props.numero}</sup></button
>

<script>
  import tippy from "../scripts/footnotes.js";

  tippy("[data-tippy-content]", {
    theme: "moderno",
    trigger: "mouseenter click",
  });
</script>
