---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Contenidos";
import ribbon from "../images/ribbon.png?url";
import TeamMember from "../components/TeamMember.astro";
import GoToTop from "../components/GoToTop.astro";
---

<BaseLayout pageTitle={pageTitle}>
  <div
    class="relative pt-28 pb-14 px-4 medium-mobile:px-10 uppercase font-display leading-very-tight sm:leading-extra-tight text-[4.5rem] mobile-medium:text-[5.5rem] sm:text-[7rem] md:text-[16rem] lg:text-[17rem] xl:text-[18rem] bg-white"
  >
    <h1 class="z-20 relative text-center">Contenidos</h1>
    <img
      src={ribbon}
      alt=""
      class="z-0 absolute top-16 mobile-medium:top-18 md:top-18 lg:top-24 left-20 mobile-medium:left-[5.8rem] md:left-72 lg:left-80 h-40 mobile-medium:h-44 md:h-64 lg:h-60 xl:h-64"
    />
  </div>

  <GoToTop bg="bg-white" />
</BaseLayout>
<style>
  body {
    @apply bg-black;
  }

  .container {
    @apply max-w-full;
    @apply flex flex-col items-center;
  }

  .wrapper {
    @apply max-w-xs mobile-medium:max-w-[90%] md:max-w-[80%] lg:max-w-[70%] xl:max-w-[60%];
    @apply px-4 md:px-10 md:pl-14 lg:pl-20;
  }
</style>
