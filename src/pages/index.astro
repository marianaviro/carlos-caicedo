---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Carlos Caicedo | Un moderno vernáculo";
import * as Intro from "../pages/contenidos/moderno-vernaculo.mdx";
import { Content as Content } from "../pages/contenidos/moderno-vernaculo.mdx";
import arrow from "../images/arrow.svg?url";
import exclamation from "../images/exclamation.png?url";
import spark from "../images/spark.png?url";
---

<BaseLayout pageTitle={pageTitle} isIndex={true}>
  <div class="title relative w-screen min-h-screen">
    <div class="z-0 absolute w-full h-full bg-black/30"></div>
    <div class="pt-24 relative uppercase text-white text-center">
      <p
        class="z-50 mb-3 lg:mb-6 drop-shadow-white-sm font-sans font-semibold tracking-widest italic underline text-md lg:text-lg"
      >
        Carlos Caicedo
      </p>
      <div
        class="z-50 px-4 drop-shadow-white-md font-display leading-very-tight sm:leading-extra-tight text-[5rem] mobile-medium:text-full-mobile sm:text-9xl md:text-[10rem] lg:text-full-desktop"
      >
        <h1>Moderno</h1>
        <h1>Vernáculo</h1>
      </div>
    </div>
    <div class="">
      <img
        src={arrow}
        alt="Continue reading"
        class="absolute bottom-10 left-7 h-28 md:h-36 cursor-pointer"
      />
    </div>
  </div>
  <div class="bg-white">
    <div
      class="relative py-14 md:py-10 px-4 medium-mobile:px-10 uppercase font-display leading-very-tight sm:leading-extra-tight text-[7.5rem] mobile-medium:text-[9rem] sm:text-[12rem] md:text-[14rem] lg:text-[17rem] xl:text-[18rem]"
    >
      <h1 class="z-20 relative text-left">Carlos</h1>
      <h1 class="z-20 relative text-right">Caicedo</h1>
      <img
        src={exclamation}
        alt=""
        class="z-0 absolute -bottom-6 right-4 md:-bottom-8 lg:-bottom-12 h-56 md:h-60 lg:h-80 xl:h-96"
      />
      <img
        src={spark}
        alt=""
        class="z-20 absolute bottom-24 md:bottom-36 lg:bottom-36 left-32 md:left-40 lg:left-44 xl:left-80 h-24 md:h-36 lg:h-44"
      />
    </div>
  </div>
  <div class="container text-left py-10 bg-yellow text-black">
    <div class="wrapper w-full">
      <div class="max-w-xs">
        <h1
          class="font-serif font-bold text-[4rem] mobile-medium:text-7xl lg:text-8xl leading-none lg:leading-[0.85] italic"
        >
          {Intro.frontmatter.subtitulo}
        </h1>
        <div class="py-6 italic font-sans tracking-wide text-lg">
          <p>
            Por:
            {
              Intro.frontmatter.autoria.map((aut, i) => {
                const route = aut
                  .normalize("NFD")
                  .replace(/[\u0300-\u036f]/g, "")
                  .toLowerCase()
                  .split(" ")
                  .join("-");
                const comma = i !== 0 ? "," : "";
                return (
                  <span>
                    {comma}
                    <a
                      href={"/equipo#" + route}
                      class="underline underline-offset-4 decoration-dotted decoration-2 hover:text-orange hover:decoration-solid"
                    >
                      {aut}
                    </a>
                  </span>
                );
              })
            }
          </p>
        </div>
      </div>
    </div>
  </div>
  <Content />
</BaseLayout>
<style>
  body {
    @apply bg-black;
  }

  .title {
    background-image: url("../images/home.jpg");
    background-position: left top;
    background-repeat: no-repeat;
    background-size: cover;
  }
  .container {
    @apply max-w-full;
    @apply flex flex-col items-center;
  }

  .wrapper {
    @apply max-w-xs mobile-medium:max-w-[90%] md:max-w-[80%] lg:max-w-[70%] xl:max-w-[60%];
    @apply px-4 md:px-10 md:pl-14 lg:pl-20;
  }
</style>
