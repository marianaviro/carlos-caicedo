---
import Header from "../components/Header.astro";
import "../styles/global.css";
const { isIndex } = Astro.props;
const { frontmatter } = Astro.props;
---

<Header isIndex={isIndex} />
<div class="bg-white">
  <h1>{frontmatter.title}</h1>
  <p>Written by {frontmatter.author}</p>
  <slot />
</div>
