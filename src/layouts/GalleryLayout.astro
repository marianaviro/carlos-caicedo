---
import BaseLayout from "./BaseLayout.astro";
import HeadingLayout from "./HeadingLayout.astro";
import "../styles/global.css";
const { frontmatter } = Astro.props;
import { Image } from "@astrojs/image/components";
import tren from "../images/fotografias/tren.png";
import portada from "../images/fotografias/portada.png";
import "swiper/css/bundle";
import GoToTop from "../components/GoToTop.astro";
---

<BaseLayout url={frontmatter.url} pageTitle={frontmatter.titulo}>
  <div>
    <HeadingLayout
      title={frontmatter.titulo}
      subtitle={frontmatter.subtitulo}
      author={frontmatter.autoria}
      tags={frontmatter.tags}
      image={frontmatter.imagen?.archivo}
      theme={"dark"}
      size={"short"}
    />
    <div class="h-screen bg-black flex items-center">
      <div class="swiper">
        <div class="swiper-wrapper">
          <slot />
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <!-- <div class="swiper-pagination"></div> -->
      </div>
    </div>
    <GoToTop bg="bg-black" />
  </div>
</BaseLayout>
